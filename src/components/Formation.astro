<style lang="scss">
  // FORMATION
  .formation {
    margin: 1rem 0;
    &__container {
      margin: 1rem 0;
    }
    &__box {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      gap: 2rem;
    }
  }

  // CARD
  .card {
    width: 30%;
    min-height: 30rem;
    perspective: 150rem;
    -moz-perspective: 150rem;
    position: relative;

    // 😍😍😍
    @media screen and (max-width: 56.25em) {
      // width: 0;
      flex: 1 0 40%;
      background: red;
    }
    @media screen and (max-width: 42em) {
      flex: 1 0 50%;
    }

    //BOX
    &__box {
      -webkit-clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
      clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
      // background-blend-mode: screen;
      border-top-left-radius: 3px;
      border-top-right-radius: 3px;
      height: 30rem;
      margin-bottom: 1rem;
      &--1 {
        background: linear-gradient(
            45deg,
            rgba(29, 244, 153, 0.8),
            rgba(29, 200, 205, 0.8)
          ),
          url(../assets/degree2.jpg), center fixed;
        color: aliceblue;
      }
      &--2 {
        background: linear-gradient(
            45deg,
            rgba(254, 70, 245, 0.8),
            rgba(250, 158, 246, 0.8)
          ),
          url(../assets/degree2.jpg), center fixed;
        color: aliceblue;
      }
      &--3 {
        background: linear-gradient(
            45deg,
            rgba(70, 205, 254, 0.8),
            rgba(45, 131, 162, 0.8)
          ),
          url(../assets/degree2.jpg), center fixed;
        color: aliceblue;
      }
      &--4 {
        background: linear-gradient(
            45deg,
            rgba(251, 254, 70, 0.8),
            rgba(181, 183, 49, 0.8)
          ),
          url(../assets/degree2.jpg), center fixed;
        color: aliceblue;
      }
    }
    //SIDE
    &__side {
      min-height: 30rem;
      width: 100%;
      position: absolute;
      top: 0;
      left: 0;
      backface-visibility: hidden;
      transition: all 0.8s ease;
      border-radius: 3px;
      box-shadow: 0 1.5rem 4rem rgba(0, 0, 0, 0.15);
      overflow: hidden;
      text-align: center;

      &--front {
        background-color: white;
      }
      &--back {
        transform: rotateY(180deg);

        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        padding: 2rem;
        &-1 {
          background: linear-gradient(
            45deg,
            rgba(29, 244, 153, 0.8),
            rgba(29, 200, 205, 0.8)
          );
        }
        &-2 {
          background: linear-gradient(
              45deg,
              rgba(254, 70, 245, 0.8),
              rgba(250, 158, 246, 0.8)
            ),
            url(../assets/degree2.jpg), center/cover;
        }
        &-3 {
          background: linear-gradient(
              45deg,
              rgba(70, 205, 254, 0.8),
              rgba(45, 131, 162, 0.8)
            ),
            url(../assets/degree2.jpg), center/cover;
        }
        &-4 {
          background: linear-gradient(
              45deg,
              rgba(251, 254, 70, 0.8),
              rgba(181, 183, 49, 0.8)
            ),
            url(../assets/degree2.jpg), center/cover;
        }

        &-header {
          width: 90%;
          font-size: 0.9rem;
          letter-spacing: 1px;
          line-height: 1.7;
          margin: 1rem auto;
          font-weight: bold;
          color: black;
          &__paragraph {
            padding-top: 3px;
            font-size: 0.6rem;
            font-weight: normal;
            line-height: normal;
          }
        }
        &-footer {
          margin-left: auto;
        }

        &-img {
          display: block;
          width: 4rem;
          margin-left: auto;
        }

        &-btn {
          &:link,
          &:visited {
            display: block;
            font-size: 1rem;
            text-decoration: none;
            border-radius: 15rem;
            padding: 0.2rem 1rem;
            transition: all 0.3s;
            position: relative;
            background-color: white;
            color: grey;
          }

          &:hover {
            transform: translateY(-3px);
            box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.2);
            &::after {
              transform: scaleX(1.4) scaleY(1.6);
              opacity: 0;
            }
          }
          &:active,
          &:focus {
            outline: none;
            transform: translateY(-1px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
          }
          &::after {
            content: "";
            background-color: white;
            display: inline-block;
            width: 100%;
            height: 100%;
            border-radius: 10rem;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
            transition: all 0.4s;
          }
          &-animated {
            animation-name: moveInBottom;
            animation-duration: 0.5s;
            animation-timing-function: ease-out;
            animation-delay: 0.75s;
            animation-fill-mode: backwards;
          }
          &-card {
            display: inline-block;
            font-size: 0.8rem;
            text-decoration: none;
            border-radius: 15rem;
            padding: 0.5rem 1rem;
            transition: all 0.3s;
            position: relative;
            background-color: white;
            color: grey;
          }
        }
      }
    }
    //CARD SIDE HOVER
    &:hover &__side--front {
      transform: rotateY(-180deg);
    }
    &:hover &__side--back {
      transform: rotateY(0);
    }

    //HEADER
    &__header {
      padding: 2rem 0 1rem;
      &--title {
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 1rem;
        font-weight: bold;
      }
      &--subtitle {
        font-size: 0.9rem;
      }
    }

    //FOOTER
    &__footer {
      margin: 0.5rem 1rem 1rem;
      font-size: 0.8rem;
      font-style: italic;
    }

    //BUTTON
    &__button {
      border-radius: 10rem;
      padding: 0.4rem 0.8rem;
      border: none;
      font-size: 0.8rem;
      border: 2px solid blueviolet;
      box-shadow: 0 2rem 4rem rgba(0, 0, 0, 0.4);
      outline: none;
    }

    //ICON
    &__icon {
      &--1 {
        width: 3rem;
        height: 3rem;
        fill: var(--accent-regular);
      }
      &--2 {
        width: 2rem;
        height: 2rem;
        fill: var(--accent-regular);
      }
      &--3 {
        width: 0.8rem;
        height: 0.8rem;
        fill: var(--accent-regular);
      }
    }

    //DEGREE
    &__degree {
      &--span {
        padding: 0.8rem 0;
        color: blueviolet;
        font-size: 1.2rem;
        display: grid;

        &::before,
        &::after {
          content: "";
          display: block;
          width: 80%;
          margin: 0 auto;
          height: 3px;
          border-radius: 1rem;
          background-color: currentColor;
        }
        &:after {
          justify-self: end;
        }
      }
    }
  }

  //KEYFRAMES
  @keyframes moveInBottom {
    0% {
      opacity: 0;
      transform: translateY(3rem);
    }

    100% {
      opacity: 1;
      transform: translate(0);
    }
  }
</style>
